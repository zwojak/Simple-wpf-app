<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ToolBar HorizontalAlignment="Left" VerticalAlignment="Top">
            <Menu VerticalAlignment="Top"  RenderTransformOrigin="1,1.179" DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open" Click="Open"/>
                    <MenuItem Header="_Exit" Click="Exit"/>
                </MenuItem>
            </Menu>
        </ToolBar>
        <TreeView x:Name="treeView" Margin="0,28,315,0"/>
        <StatusBar HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="792" RenderTransformOrigin="0.47,3.92" Margin="0,399,0,0">
            <TextBlock x:Name="statusDOS"/>
        </StatusBar>
        <ScrollViewer x:Name="scrollViewer" HorizontalAlignment="Left" Height="391" VerticalAlignment="Top" Width="315" RenderTransformOrigin="5.08,1.74" HorizontalScrollBarVisibility="Auto" Margin="477,28,0,0"/>
    </Grid>
</Window>
